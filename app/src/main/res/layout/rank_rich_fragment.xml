<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/trans"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rich_rv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="4dp"
        android:paddingBottom="70dp"
        android:clipToPadding="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rank_me_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/rank_me_sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="50+"
            android:textColor="@color/black_3"
            android:textSize="13sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="25dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="30dp"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:id="@+id/rank_me_avatar"
            tools:src="@color/black_3"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
            android:layout_marginStart="13dp"
            app:layout_constraintStart_toEndOf="@id/rank_me_sort"
            app:layout_constraintTop_toTopOf="@id/rank_me_sort"
            app:layout_constraintBottom_toBottomOf="@id/rank_me_sort" />

        <TextView
            android:id="@+id/rank_me_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Sama"
            android:textColor="@color/black_1"
            android:textSize="13sp"
            app:layout_constraintTop_toTopOf="@id/rank_me_avatar"
            app:layout_constraintBottom_toBottomOf="@id/rank_me_avatar"
            app:layout_constraintStart_toEndOf="@id/rank_me_avatar"
            android:layout_marginStart="8dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>