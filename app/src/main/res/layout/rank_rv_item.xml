<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rank_rv_item"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_radius_twenty_dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/rank_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1"
        android:textColor="@color/black_3"
        android:textSize="13sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="21dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="21dp"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:id="@+id/rank_avatar"
        tools:src="@color/black_3"
        app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
        android:layout_marginStart="32dp"
        app:layout_constraintStart_toStartOf="@id/rank_sort"
        app:layout_constraintTop_toTopOf="@id/rank_sort"
        app:layout_constraintBottom_toBottomOf="@id/rank_sort" />

    <TextView
        android:id="@+id/rank_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Sama"
        android:textColor="@color/black_1"
        android:textSize="13sp"
        app:layout_constraintTop_toTopOf="@id/rank_avatar"
        app:layout_constraintBottom_toBottomOf="@id/rank_avatar"
        app:layout_constraintStart_toEndOf="@id/rank_avatar"
        android:layout_marginStart="8dp" />



</androidx.constraintlayout.widget.ConstraintLayout>