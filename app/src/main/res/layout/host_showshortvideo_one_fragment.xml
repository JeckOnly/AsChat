<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.exoplayer2.ui.StyledPlayerView
        app:resize_mode="zoom"
        android:id="@+id/host_detail_one_video_playerview"
        app:use_controller="false"
        app:show_buffering="when_playing"
        app:show_shuffle_button="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

<!--    自定义UI-->
    <View
        android:id="@+id/host_detail_one_video_pause"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/host_detail_one_video_play"
        android:layout_width="44.5dp"
        android:layout_height="54.4dp"
        android:src="@mipmap/ic_report"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>